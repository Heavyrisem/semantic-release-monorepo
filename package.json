{
  "name": "semantic-release-monorepo",
  "version": "0.0.0-development",
  "description": "Plugins for `semantic-release` allowing it to be used with a monorepo.",
  "main": "src/index.js",
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier --write --single-quote --trailing-comma es5",
    "format:all": "yarn format \"./**/*.js\"",
    "test": "vitest --no-threads"
  },
  "license": "MIT",
  "peerDependencies": {
    "semantic-release": ">=15.11.x"
  },
  "dependencies": {
    "debug": "4.3.4",
    "execa": "8.0.1",
    "p-limit": "4.0.0",
    "pkg-up": "4.0.0",
    "ramda": "0.27.2",
    "read-pkg": "8.1.0",
    "semantic-release-plugin-decorators": "3.0.1"
  },
  "devDependencies": {
    "@types/git-log-parser": "^1.2.2",
    "@types/ramda": "0.27.66",
    "file-url": "4.0.0",
    "fs-extra": "11.1.1",
    "get-stream": "6.0.1",
    "git-log-parser": "1.2.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "p-each-series": "3.0.0",
    "prettier": "1.19.1",
    "semantic-release": "22.0.6",
    "semantic-release-github-pr": "6.0.1",
    "tempy": "3.1.0",
    "vitest": "0.34.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format"
    ]
  },
  "packageManager": "yarn@4.0.1"
}
